<h2>List of my celebrities</h2>
<ul>
  {{#each celebrities}}
    <li>
      <a href="/celebrities/{{_id}}">{{name}}</a>
      {{!-- - <a href="celebrities/edit?celebrities_id={{_id}}">EDIT</a> --}}
      <form action="celebrities/{{_id}}/delete" method="POST">
        <button type="submit">Delete</button>
      </form>
      <br/>
    </li>
  {{/each}}
</ul>
<a href="/celebrities/new">Create a new celebrity</a>